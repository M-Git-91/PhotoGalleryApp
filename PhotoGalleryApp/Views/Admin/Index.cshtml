@model Photo

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter photo title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Album</label>
        <select asp-for="AlbumCategory" asp-items="@Html.GetEnumSelectList((typeof(PhotoGalleryApp.Enums.AlbumNumber)))">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="AlbumCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="URL">Photo</label>
        <input asp-for="URL" type="file" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <button type="submit">Upload</button>
</form>
