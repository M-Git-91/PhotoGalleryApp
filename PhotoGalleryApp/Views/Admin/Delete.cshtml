@model Photo
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@section Main {
    <h1 class="text-center text-primary">Are you sure you want to delete this photo?</h1>

    <form method="post" asp-action="Delete" enctype="multipart/form-data" style="max-width: 40vw; margin-inline: auto; margin-top: 50px">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>
        }
        <input type="hidden" value="Id" id="Id" />
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <p asp-for="Title" class="form-control">@Model.Title</p>
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="AlbumCategory">Album</label>
            <p asp-for="AlbumCategory" class="form-control">@Model.AlbumCategory</p>
            <span asp-validation-for="AlbumCategory" class="text-danger"></span>
        </div>
    </form>
    <div class="form-group">
        <form action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete Photo" class="btn btn-danger mt-3" />
        </form>
    </div>
}
